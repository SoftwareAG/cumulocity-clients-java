<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.nsn.cumulocity.root</groupId>
		<artifactId>root</artifactId>
		<version>2.6.0-SNAPSHOT</version>
	</parent>

	<groupId>com.nsn.cumulocity.clients-java</groupId>
	<artifactId>clients-java</artifactId>
	<packaging>pom</packaging>
	<version>2.6.0-SNAPSHOT</version>
	<name>Cumulocity :: Clients Java</name>
	<url>http://startups.jira.com/wiki/display/MTM/Home</url>

	<modules>
		<module>java-client</module>
		<module>java-agent-support</module>
		<module>java-me-client</module>
		<module>java-me-client-test</module>
	</modules>

	<properties>
		<cumulocity.model.version>2.6.0-SNAPSHOT</cumulocity.model.version>
		<cumulocity.shared-components.version>2.6.0-SNAPSHOT</cumulocity.shared-components.version>
		<cumulocity-sdk-resource-bundles.version>2.6.0-SNAPSHOT</cumulocity-sdk-resource-bundles.version>
	</properties>

	<build>
    	<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-remote-resources-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<goals>
							<goal>process</goal>
						</goals>
						<configuration>
							<resourceBundles>
								<resourceBundle>com.nsn.cumulocity.dependencies:cumulocity-sdk-resource-bundles:${cumulocity-sdk-resource-bundles.version}</resourceBundle>
							</resourceBundles>
						</configuration>
					</execution>
				</executions>
			</plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
            </plugin>
		</plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>generate-manifest</id>
                            <goals>
                                <goal>manifest</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <configuration>
                        <archive>
                            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                        </archive>
                    </configuration>
                    <executions>
                        <execution>
                            <id>test-jar</id>
                            <goals>
                                <goal>test-jar</goal>
                            </goals>
                            <configuration>
                                <skip>${skip.test.jar}</skip>
                                <skipIfEmpty>true</skipIfEmpty>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
	</build>

	<dependencies>
        <dependency>
            <groupId>com.nsn.cumulocity.shared-components</groupId>
            <artifactId>test-utils</artifactId>
        </dependency>      
    </dependencies>

	<dependencyManagement>
		<dependencies>
			<!-- PLEASE add new dependencies ALPHABETICALLY -->
            <!-- COMPILE DEPENDENCIES START -->
			<dependency>
				<groupId>com.nsn.cumulocity.model</groupId>
				<artifactId>core-model</artifactId>
				<version>${cumulocity.model.version}</version>
			</dependency>
			<dependency>
				<groupId>com.nsn.cumulocity.model</groupId>
				<artifactId>device-capability-model</artifactId>
				<version>${cumulocity.model.version}</version>
			</dependency>
			<dependency>
    			<groupId>com.nsn.cumulocity.model</groupId>
    			<artifactId>rest-representation</artifactId>
				<version>${cumulocity.model.version}</version>				
			</dependency>
			<dependency>
				<groupId>com.nsn.cumulocity.sdk.me</groupId>
				<artifactId>java-me-client</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.nsn.cumulocity.shared-components</groupId>
				<artifactId>common-rest</artifactId>
				<version>${cumulocity.shared-components.version}</version>
			</dependency>
			<!-- COMPILE DEPENDENCIES END -->
            
            <!-- PLEASE add new dependencies ALPHABETICALLY -->
            
            <!-- TEST DEPENDENCIES START -->
			<dependency>
                <groupId>com.nsn.cumulocity.model</groupId>
                <artifactId>core-model</artifactId>
                <version>${cumulocity.model.version}</version>
                <scope>test</scope>
                <classifier>tests</classifier>
            </dependency>
			<dependency>
				<groupId>com.nsn.cumulocity.model</groupId>
				<artifactId>model-test-tools</artifactId>
				<version>${cumulocity.model.version}</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>com.nsn.cumulocity.model</groupId>
				<artifactId>rest-representation</artifactId>
				<version>${cumulocity.model.version}</version>
				<scope>test</scope>
				<classifier>tests</classifier>
			</dependency>
            <dependency>
                <groupId>com.nsn.cumulocity.shared-components</groupId>
                <artifactId>common-rest</artifactId>
                <version>${cumulocity.shared-components.version}</version>
                <classifier>tests</classifier>
                <scope>test</scope>
            </dependency>
			<dependency>
				<groupId>com.nsn.cumulocity.shared-components</groupId>
				<artifactId>test-utils</artifactId>
				<version>${cumulocity.shared-components.version}</version>
				<scope>test</scope>
			</dependency>
			<!-- TEST DEPENDENCIES END -->
            <!-- PLEASE add new dependencies ALPHABETICALLY -->
		</dependencies>
	</dependencyManagement>

</project>
